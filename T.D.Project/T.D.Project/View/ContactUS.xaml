<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="T.D.Project.View.ContactUS" Title="المساعدة" Icon="customer.png">
    <ContentPage.Content>

        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="btnContactUs" Grid.Row="0" Grid.Column="0" Image="contactus.png" BackgroundColor="#ecb913" Clicked="btnContactUs_Clicked"/>

            <Button x:Name="btnInfo" Grid.Row="0" Grid.Column="1" Image="info.png" BackgroundColor="#ecb913" Clicked="btnInfo_Clicked"/>

            <Button x:Name="btnRate" Grid.Row="1" Grid.Column="0" Image="rate.png" BackgroundColor="#ecb913"/>

            <Button x:Name="btnShare" Grid.Row="1" Grid.Column="1" Image="share.png" BackgroundColor="#ecb913" Clicked="btnShare_Clicked"/>
        </Grid>
        
        
    </ContentPage.Content>
</ContentPage>